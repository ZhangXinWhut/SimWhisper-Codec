{
    "train_batch_size": 100,
    "train_micro_batch_size_per_gpu": 100,
    "gradient_accumulation_steps": 1,
    "gradient_clipping": 1.0,
    
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 1e-4,
        "betas": [0.8, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
    
    "scheduler": {
      "type": "WarmupCosineLR",
      "params": {
        "total_num_steps":200000,
        "warmup_min_ratio": 0,
        "warmup_num_steps": 15000,
        "cos_min_ratio": 1e-7
      }
    },
    
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      },
      "allgather_partitions": true,
      "allgather_bucket_size": 2e8,
      "overlap_comm": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 2e8,
      "contiguous_gradients": true,
      "ignore_unused_parameters": true,
      "gather_16bit_weights_on_model_save": false
    },
    
    
    "bf16": {
     "enabled": false
    },
    "fp16": {
      "enabled": false,
      "auto_cast": false,
      "loss_scale": 0,
      "initial_scale_power": 16,
      "loss_scale_window": 1000,
      "hysteresis": 2,
      "consecutive_hysteresis": false,
      "min_loss_scale": 1
    }, 
  
    "activation_checkpointing": {
      "partition_activations": true,
      "cpu_checkpointing": true,
      "contiguous_memory_optimization": false,
      "number_checkpoints": 4,
      "synchronize_checkpoint_boundary": true,
      "profile": false
    },
  
    "tensorboard": {
      "enabled": true,
      "output_path": "./logs/deepspeed_tensorboard_pretrain/",
      "job_name": "simwhisper_codec_pretrain"
    },
  
    "wall_clock_breakdown": false,
    "communication_data_type": "fp32",
    "steps_per_print": 100,
    "dump_state": false,
    "load_universal_checkpoint": false,
    "nan_checking": true
    
  }